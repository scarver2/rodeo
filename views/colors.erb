<main class="megacontainer prose mx-auto mt-4 px-5 " style="background-color: #fff; color: #000;">
	<h1>Thread Colors for Embroidery</h1>
	<ol style="column-count: 3;">
	<% ISACORDS.each do |e| %>
		<div style="display: block">
			<div style="display: inline-block; width: 20px; height: 20px; background-color: #<%= e[1] %>"></div>
				<span><%= e[0] %></span>
				<span><%= e[2] %></span>
			</div>
		</div>
	<% end %>
	</ol>
</main>
